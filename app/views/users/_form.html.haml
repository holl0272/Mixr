%fieldset.forms
  %legend Registration
  = render(:partial => 'shared/errors', :locals => {:object => @user})
  = form_for @user, :url => users_path, :remote => true do |f|
    = f.label :username
    = f.text_field :username, :autofocus => true
    = f.label :password
    = f.password_field :password
    = f.label :password_confirmation
    = f.password_field :password_confirmation
    = button_to_function('Cancel', 'cancel_user_form()', :class => 'button tiny radius alert')
    = f.submit nil, :class => 'button tiny radius success'