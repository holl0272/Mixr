.row
  .large-4.columns
  %fieldset.forms
    %legend Login
    = form_tag '/login', :remote => true do
      = label_tag :username
      = text_field_tag :username, nil, :autofocus => true
      = label_tag :password
      = password_field_tag :password
      = button_to_function('Cancel', 'cancel_login_form()', :class => 'button tiny radius alert')
      = submit_tag 'Start Flirting', :class => 'button tiny radius success'